@model Mission06_Newman.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}

<h1>Add a Movie</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Title (required) -->
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Category (required) -->
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Year (required) -->
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <!-- Director (required) -->
            <div class="form-group">
                <label asp-for="Director" class="control-label"></label>
                <input asp-for="Director" class="form-control" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>

            <!-- Rating (dropdown, required) -->
            <div class="mb-3">
                <label asp-for="Rating" class="form-label"></label>
                <select asp-for="Rating" class="form-select">
                    <option value="">-- Select Rating --</option>
                    <option>G</option>
                    <option>PG</option>
                    <option>PG-13</option>
                    <option>R</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <!-- Edited (True / False radio buttons) -->
            <div class="mb-3">
                <label class="form-label">Edited (Optional)</label>

                <div class="form-check">
                    <input class="form-check-input"
                           type="radio"
                           name="Edited"
                           value="true"
                           id="EditedTrue" />
                    <label class="form-check-label" for="EditedTrue">True</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input"
                           type="radio"
                           name="Edited"
                           value="false"
                           id="EditedFalse" />
                    <label class="form-check-label" for="EditedFalse">False</label>
                </div>

                <span asp-validation-for="Edited" class="text-danger"></span>
            </div>



            <!-- Lent To (optional) -->
            <div class="form-group">
                <label asp-for="LentTo" class="control-label">Lent to (Optional)</label>
                <input asp-for="LentTo" class="form-control" />
                <span asp-validation-for="LentTo" class="text-danger"></span>
            </div>

            <!-- Notes (optional, max 25 chars) -->
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Notes (Optional)</label>
                <input asp-for="Notes" class="form-control" maxlength="25" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
